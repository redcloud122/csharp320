@model BirthdayCardGenerator.Models.BirthdayCard

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
  <meta name="viewport" content="width=device-width" />
  <link rel="stylesheet" type="text/css" href="~/css/Styles.css" />
  <title>Index</title>
</head>
<body>
  <header>
    <h2>Birthday Card Generator</h2>
  </header>
  <div>
    <h3>Send a Birthday Card</h3>

    <div class="row">
      <div class="col-md-4">
        <form asp-action="Index">
          <div asp-validation-summary="All" class="text-danger"></div>

          <div class="form-group">
            <label asp-for="From" class="control-label"></label>
            <input asp-for="From" class="form-control" />
          </div>

          <div class="form-group">
            <label asp-for="To" class="control-label"></label>
            <input asp-for="To" class="form-control" />
          </div>

          <div class="form-group">
            <label asp-for="Message" class="control-label"></label>
            <input asp-for="Message" class="form-control" style="background-color: lightyellow;" />
          </div>

          <div class="form-group">
            <input type="submit" value="Send Card" class="btn btn-success" />
          </div>
        </form>
      </div>
    </div>
  </div>
</body>
</html>
